body
    font-family monospace
    background-color #444

#filter-view
    background-color white
    padding 5px

h1
    color white

a, .add-filter, .add-group-by
    cursor pointer

span.remove
    color: #f55
    margin-right 10px
    cursor pointer

.kpis-container
    display flex
    align-items center
    flex-wrap wrap

.kpi
    flex-grow 1
    border 1px solid #CCC
    margin 5px
    padding 15px
    text-align center
    border-radius 5px

.kpi.interval_5
    background-color #DDFFDD

.kpi.interval_4
    background-color #EEFFEE

.kpi.interval_3
    background-color #FFE

.kpi.interval_2
    background-color #FFEEEE

.kpi.interval_1
    background-color #FFDDDD

.tags-container
    display flex
    align-items center
    flex-wrap wrap

.tag
    flex-grow 1
    border 1px solid #CCC
    text-align center
    margin 3px
    padding 3px
    background-color #FFF
    &:hover
        cursor pointer
    &.interval_1
        color red
    &.interval_2
        color #C11
    &.interval_3
        color orange
    &.interval_4
        color #1C1
    &.interval_5
        color green

.tag-label
    font-weight: bold

.filter-label
    margin-bottom 5px
    font-weight bold

div.group-by, div.filter
    margin-bottom 5px

span.hierarchy
    font-weight bold

div.click-to-expand
    overflow hidden
    text-overflow ellipsis
    max-height 60px
    cursor pointer

div.click-to-expand.expanded
    overflow visible
    max-height inherit

div.exception
    margin-bottom 3px

div.exception-message
    color: #BBB;

div.pool
    border 1px solid #CCC
    margin-bottom 5px
    padding 5px
    background-color white

a.details
    margin-right 3px

#result-details
    background-color white
    padding 5px

div.thumbnails
    overflow-x scroll
    overflow-y hidden
    white-space nowrap
    width 100%

div.thumbnail
    display inline-block
    width 200px
    height 200px
    margin-right 10px
    cursor pointer
    overflow hidden
    &.selected
        border 2px solid black

div.fullsize
    margin-top 10px

img.fullsize
    width 100%
